{% extends 'base.html.twig' %}

{% block title %} {{ product.name }} {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/productpage.css') }}" type="text/css">
{% endblock %}

{% block main %}
    <div class="container">
        <div class="row pb-5 mt-5">
            <div class="col-5">
                <div class="product-image">
                    <img class="img-fluid" src="{{ asset('/images/uploads/products/' ~ product.image) }}" alt="{{ product.name }}">
                </div>
            </div>
            <div class="col">
                <header class="my-4">
                    <h1 class="h2">{{ product.name }}</h1>
                </header>
                <h2 class="h4">Cena:</h2>
                <div class="h4 mb-5">{{ product.price }} z≈Ç</div>
                <h2 class="h4">Kategoria</h2>
                <div class="h4 category-name"><a href="#">{{ product.category }}</a></div>
            </div>
        </div>
        <div class="row pt-5">
        <div class="col">
            <h2 class="h3">Opis</h2>
            <div class="description">
                {{ product.description | raw}}
            </div>

            </div>
        </div>
    </div>
{% endblock %}
