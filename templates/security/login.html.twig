{% extends 'base.html.twig' %}

{% block title %}Zaloguj się!{% endblock %}

{% block main %}
<div class="container px-5">
    <form method="post">


        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Jesteś zalogowany jako {{ app.user.username }}, <a href="{{ path('app_logout') }}">Wyloguj się</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal text-center">Logowanie</h1>
        <label for="inputUsername" class="fs-5">Użytkownik</label>
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control mb-2" autocomplete="username" required autofocus>
        <label for="inputPassword" class="fs-5">Hasło</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        <br>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <button class="btn btn-lg btn-primary" type="submit">
            Zaloguj się
        </button>

    </form>
</div>
{% endblock %}
