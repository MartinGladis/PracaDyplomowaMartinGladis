{% set currentPath = app.request.get('_route') %}

<!DOCTYPE html>
<html lang="pl">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale-1">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
            <link href="{{ asset('assets/css/main.css') }}" rel="stylesheet" type="text/css">
        {% endblock %}

    </head>
    <body class="d-flex flex-column min-vh-100">
        <header class="fs-4">
            <nav class="navbar navbar-dark bg-primary navbar-expand-xl">
                <div class="container-fluid">
                    <a href="{{ path('homepage') }}" class="navbar-brand">
                        <img src="{{ asset('images/logo.svg') }}" alt="Sklep Internetowy">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainmenu" aria-controls="mainmenu" aria-expended="false">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="mainmenu">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item my-1">
                                <a href="{{ path('homepage') }}" class="nav-link {{ currentPath == 'homepage' ? 'active' }}">Strona Głowna</a>
                            </li>
                            <li class="nav-item my-1">
                                <a href="{{ path('category') }}" class="nav-link {{ currentPath == 'category' or currentPath == 'products-by-category' ? 'active' }}">Kategorie</a>
                            </li>
                            <li class="nav-item my-1">
                                <a href="{{ path('calibration') }}" class="nav-link {{ currentPath == 'calibration' ? 'active' }}">Kalibracja</a>
                            </li>
                        </ul>
                        <div class="d-inline-block me-5 videoContainerSwitcher my-2">
                            <input type="checkbox" id="videoContainerSwitch">
                            <label for="videoContainerSwitch">&nbsp;Pokaż podgląd kamery</label>
                        </div>
                        <form class="row g-2 align-items-center my-2" method="post">
                            <div class="col-auto">
                                <input class="form-control" type="search" name="search" placeholder="Szukaj" aria-label="Szukaj">
                            </div>
                            <div class="col-auto">
                                <button type="submit">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </nav>
        </header>
        <main class="py-3">
    {% block main %}
        {# <img src="{{ asset('/images/under-construction.gif') }}" alt="Under Construction"> #}
    {% endblock %}
        </main>
        <footer class="bg-primary text-white mt-auto py-2 fs-4">
            <div class="text-center">
                <span>&copy; {{ "now" | date("Y") }} Copyright: Martin Gladis</span>
            </div>
        </footer>
        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
            <script src="https://webgazer.cs.brown.edu/webgazer.js" type="text/javascript"></script>
            <script src="{{ asset('assets/js/app.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
