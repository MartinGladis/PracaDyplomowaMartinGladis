{% set current_path = app.request.get('_route') %}

<!DOCTYPE html>
<html lang="pl">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale-1">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
            <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet"  type="text/css">
            <link href="{{ asset('assets/css/app.css') }}" rel="stylesheet" type="text/css">
        {% endblock %}

    </head>
    <body>
        <header>
            <nav class="navbar navbar-dark bg-primary navbar-expand-lg">
                <div class="container-fluid">
                    <a href="{{ path('homepage') }}" class="navbar-brand">
                        <img src="{{ asset('images/logo.svg') }}" alt="Sklep Internetowy">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainmenu" aria-controls="mainmenu" aria-expended="false">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="mainmenu">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a href="{{ path('homepage') }}" class="nav-link {{ current_path == 'homepage' ? 'active' }}">Strona Głowna</a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ path('category') }}" class="nav-link {{ current_path == 'category' ? 'active' }}">Kategorie</a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ path('calibration') }}" class="nav-link {{ current_path == 'calibration' ? 'active' }}">Kalibracja</a>
                            </li>
                        </ul>
                        <div class="d-inline me-5 videoContainerSwitcher">
                            <input type="checkbox" id="videoContainerSwitch">
                            <label for="videoContainerSwitch">Pokaż podgląd kamery</label>
                        </div>
                        <form class="row g-2 align-items-center" method="post">
                            <div class="col-auto">
                                <input class="form-control" type="search" name="search" placeholder="Szukaj" aria-label="Szukaj">
                            </div>
                            <div class="col-auto">
                                <button type="submit">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </nav>
        </header>
        <main class="py-3">
    {% block main %}
        <img src="{{ asset('/images/under-construction.gif') }}" alt="Under Construction">
    {% endblock %}
        </main>
        <footer class="bg-primary text-white mt-5 py-2" > {# style="display:none;" #}
            <div class="text-center">
                &copy; 2021 Copyright: Martin Gladis
            </div>
        </footer>
        {% block javascripts %}
            <script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('assets/js/webgazer.js') }}" type="text/javascript"></script>
            <script src="{{ asset('assets/js/app.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
